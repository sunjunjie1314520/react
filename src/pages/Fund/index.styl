.m-menu
    width 100%
    position fixed
    left 0
    right 0
    background #0da195
    padding 0 4%
    color #fff
    z-index 1
    display flex
    align-items center
    height 40px
    justify-content flex-end
.main
    float left
    width 100%
    padding-top 40px

.fund-wrap
    float left
    position fixed
    right -60%
    width 60%
    top 40px
    bottom 0
    background #f1f1f1
    transition .15s
    z-index 2
    &.active
        right 0
    input
        float left
        height 40px
        text-align center
        font-size 16px
        border none
        width 100%
    button
        height 40px
        width 100%
        float left
        color #fff
        font-size 16px
        &.b1
            background #228cb5
        &.b2
            background #e7541e
    .list
        ul
            li
                float left
                width 100%
                line-height 2.8
                border-bottom 1px solid #ccc
                padding 0 12px
                white-space nowrap
                overflow hidden
                text-overflow ellipsis

.fund-list
    float left
    width 100%
    background #fff
    ul
        li
            float left
            width 100%
            border-top .5px solid #e3e3e3
            transition .1s
            padding 0 30%
            &:not(.first)
                span
                    font-family "myfont"
            &.first
                border-top none
                span
                    color #979797
            span
                float left
                font-size 18px
                width 33.33%
                text-align center
                line-height 2.3
                transition .1s
                color #383838
                &.red
                    color #e7541e
                &.green
                    color #0da195
                &.s1
                    width 40%
                &.s2
                    width 30%
                &.s3
                    width 30%

.fund-info
    float left
    padding 20px 4%
    width 100%
    background #fff
    ul
        li
            float left
            width 100%
            span
                float left
                line-height 2
                font-size 15px
            b
                float left
                line-height 2
                font-size 15px
                font-family "myfont"
                &.red
                    color #e7541e
                &.green
                    color #0da195

.set
    float left
    padding 20px 4%
    width 100%
    background #fff
    border-top 1px solid #dcdcdc


@media screen and (max-width 768px)
       
    .fund-list
        ul
            li
                padding 0 4%
                span
                    font-size 14px
                    line-height 2.8