
.fund-wrap
    border .6px solid #ccc
    float left
    width 100%
    display flex
    justify-content center
    span
        float left
        line-height 80px
        font-size 20px
    input
        float left
        height 80px
        text-align center
        font-size 20px
        border none
    button
        height 80px
        width 300px
        float left
        color #fff
        font-size 20px
        &:active
            background #1b20b1
        &.b1
            background blue
        &.b2
            background #f60

.fund-list
    float left
    width 100%
    padding-top 30px
    background #fff
    ul
        li
            float left
            width 100%
            border-top .5px solid #e3e3e3
            transition .1s
            padding 0 30%
            &:not(.first)
                span
                    font-family "myfont"
            &.first
                span
                    color #979797
            span
                float left
                font-size 18px
                width 33.33%
                text-align center
                line-height 2.3
                transition .1s
                color #383838
                &.red
                    color #e7541e
                &.green
                    color #0da195
                &.s1
                    width 40%
                &.s2
                    width 30%
                &.s3
                    width 30%

.fund-info
    float left
    padding 20px 4%
    width 100%
    margin-top 5px
    background #fff
    ul
        li
            float left
            width 100%
            span
                float left
                line-height 2
                font-size 15px
            b
                float left
                line-height 2
                font-size 15px
                font-family "myfont"
                &.red
                    color #e7541e
                &.green
                    color #0da195


@media screen and (max-width 768px)
    .fund-wrap
        display block
        span
            display none
        input
            width 100%
            height 45px
        button
            width 50%
            height 45px
            font-size 16px
        
    .fund-list
        padding-top 5px
        ul
            li
                padding 0 4%
                span
                    font-size 14px
                    line-height 2.8